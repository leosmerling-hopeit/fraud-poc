{
    "app": {
        "name": "fraud-poc",
        "version": "0.0.1-training"
    },
    "env": {
        "dask": {
            "_url": "tcp://localhost:8786",
            "url": "local"
        },
        "data" : {
            "raw": "./data/raw",
            "partitioned": "./data/partitioned",
            "features": "./data/features",
            "training": "./data/training"
        },
        "training_data": {
            "num_folds": 10,
            "subsample_not_fraud": 0.5
        },
        "model": {
            "path": "./data/model/xgb",
            "validation_min_score": 0.9
        },
        "db": {
            "host": "localhost", "port": 6379
        }
    },
    "events": {
        "submit_training_pipeline": {
            "type": "GET",
            "write_stream": {
                "name": "{events.data.make-sample-data.write_stream.name}"
            }            
        },
        "data.make-sample-data" :{
            "type": "GET",
            "write_stream": {
                "name": "{auto}"
            },
            "config" : {
                "stream" : {
                    "timeout": 3600,
                    "target_max_len": 1
                }
            }
        },
        "data.preprocess" :{
            "type": "STREAM",
            "read_stream": {
                "name": "{events.data.make-sample-data.write_stream.name}",
                "consumer_group": "{auto}"
            },
            "write_stream": {
                "name": "{auto}"
            },
            "config" : {
                "stream" : {
                    "timeout": 3600,
                    "target_max_len": 1
                }
            }
        },
        "data.feature-calc" :{
            "type": "STREAM",
            "read_stream": {
                "name": "{events.data.preprocess.write_stream.name}",
                "consumer_group": "{auto}"
            },
            "write_stream": {
                "name": "{auto}"
            },
            "config" : {
                "stream" : {
                    "timeout": 3600,
                    "target_max_len": 1
                }
            }
        },
        "data.training-data" :{
            "type": "STREAM",
            "read_stream": {
                "name": "{events.data.feature-calc.write_stream.name}",
                "consumer_group": "{auto}"
            },
            "write_stream": {
                "name": "{auto}"
            },
            "config" : {
                "stream" : {
                    "timeout": 3600,
                    "target_max_len": 1
                }
            }
        },
        "data.prepare-db" :{
            "type": "STREAM",
            "read_stream": {
                "name": "{events.data.feature-calc.write_stream.name}",
                "consumer_group": "{auto}"
            },
            "write_stream": {
                "name": "{auto}"
            },
            "config" : {
                "stream" : {
                    "timeout": 3600,
                    "target_max_len": 1
                }
            }
        },
        "model.train" :{
            "type": "STREAM",
            "read_stream": {
                "name": "{events.data.training-data.write_stream.name}",
                "consumer_group": "{auto}"
            },
            "write_stream": {
                "name": "{auto}"
            },
            "config" : {
                "stream" : {
                    "timeout": 3600,
                    "target_max_len": 1
                }
            }
        }
    }
}